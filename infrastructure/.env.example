# GlitchTip Infrastructure Configuration
# Copy this file to .env and fill in your actual values

# PostgreSQL Database Configuration
POSTGRES_DB=glitchtip
POSTGRES_USER=glitchtip
POSTGRES_PASSWORD=change_this_secure_password
DATABASE_URL=postgres://glitchtip:change_this_secure_password@postgres:5432/glitchtip

# GlitchTip Configuration
SECRET_KEY=change_this_to_random_50_character_string
EMAIL_URL=consolemail://  # For development, use SMTP for production
GLITCHTIP_DOMAIN=https://crash.lokusmd.com
DEFAULT_FROM_EMAIL=glitchtip@lokusmd.com

# Security Settings
ENABLE_OPEN_USER_REGISTRATION=false
ENABLE_ORGANIZATION_CREATION=false

# Redis Configuration (Optional - improves performance)
REDIS_URL=redis://redis:6379

# Cloudflare Tunnel Configuration
# Get these values from: cloudflared tunnel create lokus-crash
TUNNEL_TOKEN=your_cloudflare_tunnel_token_here

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Alert Configuration
ALERT_EMAIL=your_email@example.com
SLACK_WEBHOOK_URL=  # Optional: For Slack notifications

# Note: Never commit the actual .env file to git!
# This file contains sensitive credentials.
